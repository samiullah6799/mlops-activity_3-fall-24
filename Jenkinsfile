pipeline {
    agent any
    stages {
        stage ('Checkout') {
            steps {
                echo 'Repository Checkout'
            }
        }

        stage ('Build') {
            steps {
                echo 'Packages Installation'
            }
        }

        stage ('Test') {
            steps {
                echo 'Testing'
            }
        }

        stage ('Deploy') {
            steps {
                echo 'Deploying'
            }
        }
    }
}